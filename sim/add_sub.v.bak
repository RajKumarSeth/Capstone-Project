input c;
output [3:0] sum;
output carry;
wire [2:0] co;
wire [3:0] x;
xor xor0(x[0],b[0],c);
xor xor1(x[1],b[1],c);
xor xor2(x[2],b[2],c);
xor xor3(x[3],b[3],c);
