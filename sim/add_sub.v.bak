full_adder fa1(.a(a[1]),.b(x[1]),.c(co[0]),.sum(sum[1]),.carry(co[1]));
full_adder fa2(.a(a[2]),.b(x[2]),.c(co[1]),.sum(sum[2]),.carry(co[2]));
full_adder fa3(.a(a[3]),.b(x[3]),.c(co[2]),.sum(sum[3]),.carry(carry));
